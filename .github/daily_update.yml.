name: Daily Surveillance Data Update

on:
  schedule:
    # Runs every day at 3:00 AM UTC (adjust as needed)
    - cron: '0 3 * * *'

jobs:
  update-data:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pandas # add other dependencies if needed

    - name: Run CSV to JSON conversion script
      run: |
        python convert_csv_to_json.py

    - name: Commit and push changes
      run: |
        git config user.name "github-actions"
        git config user.email "github-actions@github.com"
        git add json/*.json
        git add data_json/file_list.json
        git commit -m "Daily update of JSON surveillance data" || echo "No changes to commit"
        git push
      env:
        # Use the automatically provided GITHUB_TOKEN for auth
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
