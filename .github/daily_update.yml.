name: Daily Surveillance Data Update

on:
  schedule:
    # Runs every day at 3:00 AM UTC (adjust if needed)
    - cron: '0 3 * * *'
  workflow_dispatch:  # allows manual run from GitHub UI

jobs:
  update-data:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pandas

      - name: Run CSV to JSON conversion script
        run: python convert_csv_to_json.py

      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add json/*.json data_json/file_list.json
          # Commit only if there are staged changes
          if ! git diff --cached --quiet; then
            git commit -m "Daily update of JSON surveillance data"
            git push origin HEAD:main
          else
            echo "No changes to commit"
          fi
        env:
          # This token is automatically provided, no need to define it as secret manually
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

