name: Daily CSV to JSON Conversion

on:
  schedule:
    # Runs daily at 1:00 AM UTC (change as needed)
    - cron: '0 1 * * *'

jobs:
  convert_csv_to_json:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip

      - name: Run CSV to JSON conversion script
        run: |
          python convert_csv_to_json_bse.py

      - name: Commit and push changes
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
          git add data_json/ processed_files.json
          # Only commit if changes exist
          git diff --cached --quiet || git commit -m "Automated: Convert new CSVs to JSON"
          git push

